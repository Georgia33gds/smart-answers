<% if @presenter.accepted_responses.present? %>
  <%= render "govuk_publishing_components/components/heading", {
    text: local_assigns[:hide_previous_answers] ? "Change your answers" : "Your answers",
    heading_level: 2,
    font_size: "m",
    margin_bottom: 4
  } %>

  <%= tag.p class: "govuk-body" do %>
    <%= link_to "Start again",
      restart_flow_path(@presenter),
      class: "govuk-link",
      data: {
        module: "gem-track-click",
        "track-action": "Start again",
        "track-category": "StartAgain",
        "track-label": @presenter.current_node_presenter.title
      } %>
  <% end %>
<% end %>
