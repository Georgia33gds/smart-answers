<%
  link_label = "Hide this page"
  aria_label ||= "Hide this page. Quick exit button, it opens BBC Weather in a new tab"
  details_title = "What the ‘hide this page’ button does"
  details_body ||= "
    <p class=\"govuk-body\">Use this button to quickly hide this page. For example, to stop someone seeing you're using this service. The button opens BBC Weather in a new tab.</p>
    <p class=\"govuk-body\">This tab will stay open and also go to BBC Weather to hide the page you are using, but when you go back in your browser you will go to the start page of this service. Your answers will not be stored.</p>
  ".html_safe
%>
<div class="app-c-hide-this-page-banner" data-module="app-hide-this-page-banner">
  <div class="govuk-width-container">
    <div class="app-c-hide-this-page-banner__columns">
      <div class="app-c-hide-this-page-banner__link-wrapper">
        <%= render "govuk_publishing_components/components/button", {
          text: "<strong>#{link_label}</strong>".html_safe,
          href: link_url,
          target: "_blank",
          rel: "nofollow noreferrer noopener",
          aria: {
            label: aria_label
          },
          destructive: true,
        } %>
      </div>
      <div class="app-c-hide-this-page-banner__details-wrapper">
        <%= render "govuk_publishing_components/components/details", {
          title: details_title
        } do %>
          <%= details_body %>
        <% end %>
      </div>
    </div>
  </div>
</div>
